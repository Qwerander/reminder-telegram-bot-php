{
    "version": 2,
    "builds": [
      {
        "src": "api/*.php",
        "use": "vercel-php@0.7.0"
      }
    ],
    "routes": [
      {
        "src": "/webhook",
        "dest": "/api/bot.php"
      },
      {
        "src": "/poll",
        "dest": "/api/poll.php"
      }
    ],
    "crons": [
      {
        "path": "/poll",
        "schedule": "*/5 * * * *"
      }
    ]
  }